using Microsoft.VisualStudio.TestTools.UnitTesting;
using HWTen;

namespace TriangleTests
{
    [TestClass]
    public class UnitTest1
    {
        [TestMethod]
        public void DistanceTest()
        {
            Point point1 = new Point(2, 7);
            Point point2 = new Point(1, 3);
            
            double expected = 4.123;
            double result = Triangle.Distance(point1,point2);

            Assert.AreEqual(expected, result);
        }

        [TestMethod]
        public void PerimeterTest()
        {
            Point point1 = new Point(2, 7);
            Point point2 = new Point(1, 3);
            Point point3 = new Point(7, 273);

            var triangle = new Triangle(point1,point2,point3);
            double expected = 540.237;
            double result = Triangle.Perimeter(triangle);

            Assert.AreEqual(expected, result);
        }

        [TestMethod]
        public void SquareTest()
        {
            Point point1 = new Point(2, 7);
            Point point2 = new Point(1, 3);
            Point point3 = new Point(7, 273);

            var triangle = new Triangle(point1, point2, point3);
            double expected = 122.743;
            double result = Triangle.Square(triangle);

            Assert.AreEqual(expected, result);
        }
    }
}
